# =============================================================================
# CharityMap Environment Variables Example
#
# Copy this file to .env and update the values as needed.
# For Docker: These can be overridden in docker-compose.yml
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
POSTGRES_USER=charitymap
POSTGRES_PASSWORD=charitymap_password
POSTGRES_DB=charitymap

# Full connection string for the backend
SQLALCHEMY_DATABASE_URI=postgresql://charitymap:charitymap_password@db:5432/charitymap

# -----------------------------------------------------------------------------
# Backend Configuration
# -----------------------------------------------------------------------------
# Secret key for JWT token signing
# IMPORTANT: Change this in production!
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
# Backend API URL (used by client-side JavaScript)
# For Docker: /api (proxied through Next.js to backend)
# For local development: http://localhost:5000
NEXT_PUBLIC_BACKEND_URL=/api

# Internal backend URL for Next.js server-side proxy (Docker only)
INTERNAL_BACKEND_URL=http://backend:5000
